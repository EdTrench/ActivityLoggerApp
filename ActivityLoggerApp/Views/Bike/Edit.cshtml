@*@model ActivityLoggerApp.Models.Bike
*@

@model ActivityLoggerApp.ViewModels.BikeViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Bike</legend>

        <div class="editor-label">
            Bike Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.bike.Id)
            @Html.ValidationMessageFor(model => model.bike.Id)
        </div>

        <div class="editor-label">
            Bike Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.bike.Name)
            @Html.ValidationMessageFor(model => model.bike.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.bike.Person.Name, "Name")
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(
            model => model.bike.Person.Id,
            Model.riders
            )
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.bike.Type)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.bike.Type)
            @Html.ValidationMessageFor(model => model.bike.Type)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
