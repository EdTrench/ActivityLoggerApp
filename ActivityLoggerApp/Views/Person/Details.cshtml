@model ActivityLoggerApp.Models.Person

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Rider</legend>

    <div class="display-label">Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">Weight</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Weight)
    </div>

    <div class="display-label">Dob</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Dob)
    </div>

    <div class="display-label">Category</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Category)
    </div>

    <div class="display-label">User Id</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UserId)
    </div>
    
    <div class="display-label">Bike(s)</div>
        @foreach (var bike in Model.Bikes)
        {
                <td>@bike.Name :</td>
            <br />
                <td>@bike.Type</td>
            <br />
        }

</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
